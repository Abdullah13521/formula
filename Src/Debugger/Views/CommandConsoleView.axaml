<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:Debugger.ViewModels"
             x:DataType="vm:CommandConsoleViewModel"
             x:Class="Debugger.Views.CommandConsoleView"
             Name="ConsoleView">
    <DockPanel Margin="10,0,10,0">
        <AutoCompleteBox Margin="10,0,0,7" 
                         Name="CommandInput" 
                         Width="350" 
                         Height="30" 
                         HorizontalAlignment="Left" 
                         Background="#222222"
						 DockPanel.Dock="Top"/>
		<ScrollViewer Background="Black"
					  Height="{Binding $parent[StackPanel].Bounds.Height}">
		    <TextBlock Padding="25" 
                       Name="ConsoleOutput" 
                       Background="Black"
                       TextWrapping="NoWrap"
                       Height="{Binding $parent[StackPanel].Bounds.Height}"/>
		</ScrollViewer>
    </DockPanel>
</UserControl>
