<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:material="using:Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:Debugger.ViewModels"
             x:DataType="vm:InferenceRulesViewModel"
             x:Class="Debugger.Views.InferenceRulesView">
    <DockPanel>
        <TextBlock TextAlignment="Center" 
                   Text="Inference Rules"
                   Height="30"
                   Margin="0,5,0,0"
				   DockPanel.Dock="Top"/>
        <DockPanel Height="{Binding $parent[StackPanel].Bounds.Height}"
                    Width="{Binding $parent[StackPanel].Bounds.Width}">
            <StackPanel Spacing="4"
                        Margin="0,0,4,0"
                        Orientation="Vertical"
						DockPanel.Dock="Left">
                <Button Width="25"
                        Height="25">
                    <material:MaterialIcon Kind="Plus"/>
                </Button>
                <Button Width="25"
                        Height="25">
                    <material:MaterialIcon Kind="Minus"/>
                </Button>
                <Button Width="25"
                        Height="25">
                    <material:MaterialIcon Kind="Refresh"/>
                </Button>
            </StackPanel>
			<ScrollViewer HorizontalScrollBarVisibility="Hidden"
					      DockPanel.Dock="Right">
                <ItemsRepeater Items="{Binding Items}" 
                               Height="{Binding $parent[StackPanel].Bounds.Height}"
                               Width="{Binding $parent[StackPanel].Bounds.Width}"
                               Background="#222222">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox/>
                                <TextBlock Text="{Binding Header}"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
			</ScrollViewer>
        </DockPanel>
    </DockPanel>
</UserControl>
