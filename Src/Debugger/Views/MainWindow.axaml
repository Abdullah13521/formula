<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FormulaDebuggerGUI.Views.MainWindow"
        xmlns:vm="using:FormulaDebuggerGUI.Views"
        x:DataType="vm:MainWindowViewModel"
        Title="Formula Debugger"
        ExtendClientAreaToDecorationsHint="True">
    <DockPanel Width="NaN" Margin="0,25,0,0">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Command="{Binding OpenCmd}"/>
                <MenuItem Header="Open Folder" Command="{Binding OpenFolderCmd}"/>
                <MenuItem Header="Exit" Command="{Binding ExitCmd}"/>
            </MenuItem>
        </Menu>
        <TreeView DockPanel.Dock="Left" Items="{Binding Items}" SelectedItems="{Binding SelectedItems}" SelectionMode="Single" Width="350" Height="450">
            <TreeView.ItemTemplate>
                <TreeDataTemplate ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Header}"/>
                </TreeDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </DockPanel>
</Window>
